@model Exam.Models.Teacher

@{
    ViewBag.Title = "编辑教师";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>编辑教师</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>教师信息</h4>
