@using Exam.Models
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>在线考试 - @ViewBag.Title</title>

    <!--导入项目所需的样式文件-->
    <link href="/css/global.css" rel="stylesheet" />
    <link href="/css/Site.css" rel="stylesheet" />
</head>
<body>
    <div id="all">
        <!--页眉-->
        @if (Session["LoginName"] == null || Session["Type"] == null)
        {
            @Html.Partial("_PartialHeader")
        }
        else if ((string)Session["Type"] == "老师")
        {
            @Html.Partial("_PartialHeaderTeacher");
        }
        else if ((string)Session["Type"] == "学生")
        {
            @Html.Partial("_PartialHeaderStudent");
        }
        <div id="content">
            <!--页面内容部分-->
            @RenderBody()
            <!--页脚-->
            <div id="footer">
                <hr style="margin:20px 0px;" /> 在线全自动化考试   版权所有 - 2018
            </div>
        </div>
    </div>
</body>
</html>
